{
  "name": "2026-contentmaker",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "bootstrap": "node system/start.js",
    "lint": "eslint src system config --ext .js",
    "format": "prettier --write \"**/*.{js,json,css,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,md,html}\"",
    "unit": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test": "npm run lint && npm run format:check && npm run unit"
  },
  "devDependencies": {
    "eslint": "^9.10.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.3"
  }
}
